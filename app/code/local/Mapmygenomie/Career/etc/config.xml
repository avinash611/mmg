<?xml version="1.0"?>
<config>
    <modules>
        <Mapmygenomie_Career>
            <version>0.2.0</version>
        </Mapmygenomie_Career>
    </modules>
    <global> 			
        <helpers>
            <mapmygenomie_career>
                <class>Mapmygenomie_Career_Helper</class>
            </mapmygenomie_career>
        </helpers>
        <blocks>
            <mapmygenomie_career>
                <class>Mapmygenomie_Career_Block</class>
            </mapmygenomie_career>
        </blocks>
        <models>
            <mapmygenomie_career>
                <class>Mapmygenomie_Career_Model</class>
                <resourceModel>mapmygenomie_career_resource</resourceModel>
            </mapmygenomie_career>
            <mapmygenomie_career_resource>
                <class>Mapmygenomie_Career_Model_Resource</class>
                <entities>
                    <category>
                        <table>mapmygenomie_career_category</table>
                    </category>
                    <position>
                        <table>mapmygenomie_career_position</table>
                    </position>
                    <jobmanagement>
                        <table>mapmygenomie_career_job_manager</table>
                    </jobmanagement>
                </entities>
            </mapmygenomie_career_resource>
        </models>
		
        <resources>
            <mapmygenomie_career_setup>
                <setup>
                    <module>Mapmygenomie_Career</module>
                </setup>
            </mapmygenomie_career_setup>
        </resources>
        <template>
            <email>
                <contacts_email_email_template>
                    <type>html</type>
                </contacts_email_email_template>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mapmygenomie_career after="Mage_Adminhtml">Mapmygenomie_Career_Adminhtml</mapmygenomie_career>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mapmygenomie_career>
                    <file>mapmygenomie_career.xml</file>
                </mapmygenomie_career>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <mapmygenomie_career>
                    <file>mapmygenomie_career.xml</file>
                </mapmygenomie_career>
            </updates>
        </layout>
        <routers>
            <mapmygenomie_career>
                <use>standard</use>
                <args>
                    <module>Mapmygenomie_Career</module>
                    <frontName>careers</frontName>
                </args>
            </mapmygenomie_career>
        </routers>  
      
    </frontend>
</config>

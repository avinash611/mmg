            <!-- Save images associated with attribute options -->
            <controller_action_postdispatch_adminhtml_catalog_product_attribute_save>
                <observers>
                    <mapmygenomie_compare>
                        <class>mapmygenomie_compare/optimage</class>
                        <method>uploadAndSaveImages</method>
                    </mapmygenomie_compare>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_attribute_save>
            <adminhtml_cache_flush_all>
                <observers>
                    <mapmygenomie_compare>
                        <class>mapmygenomie_compare/optimage</class>
                        <method>cleanOptImages</method>
                    </mapmygenomie_compare>
                </observers>
            </adminhtml_cache_flush_all>
            <adminhtml_cache_flush_system>
                <observers>
                    <mapmygenomie_compare>
                        <class>mapmygenomie_compare/optimage</class>
                        <method>cleanOptImages</method>
                    </mapmygenomie_compare>
                </observers>
            </adminhtml_cache_flush_system>
            <clean_media_cache_after>
                <observers>
                    <mapmygenomie_compare>
                        <class>mapmygenomie_compare/optimage</class>
                        <method>cleanOptImages</method>
                    </mapmygenomie_compare>
                </observers>
            </clean_media_cache_after>
            <clean_catalog_images_cache_after>
                <observers>
                    <mapmygenomie_compare>
                        <class>mapmygenomie_compare/optimage</class>
                        <method>cleanOptImages</method>
                    </mapmygenomie_compare>
                </observers>
            </clean_catalog_images_cache_after>
        </events>

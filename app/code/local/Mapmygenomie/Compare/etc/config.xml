<?xml version="1.0"?>
<config>
    <modules>
        <Mapmygenomie_Compare>
            <version>0.0.1</version>
        </Mapmygenomie_Compare>
    </modules>
    <global> 			
        <helpers>
            <mapmygenomie_compare>
                <class>Mapmygenomie_Compare_Helper</class>
            </mapmygenomie_compare>
        </helpers>
        <blocks>
            <mapmygenomie_compare>
                <class>Mapmygenomie_Compare_Block</class>
            </mapmygenomie_compare>
        </blocks>
        <models>
            <mapmygenomie_compare>
                <class>Mapmygenomie_Compare_Model</class>
                <resourceModel>mapmygenomie_compare_resource</resourceModel>
            </mapmygenomie_compare>
            <mapmygenomie_compare_resource>
                <class>Mapmygenomie_Compare_Model_Resource</class>
                <entities>
                    <hashcode>
                        <table>mapmygenomie_compare_hascode</table>
                    </hashcode>
                </entities>
            </mapmygenomie_compare_resource>
        </models>
        <resources>
            <mapmygenomie_compare_setup>
                <setup>
                    <module>Mapmygenomie_Compare</module>
                </setup>
            </mapmygenomie_compare_setup>
        </resources> 
    </global>

    <frontend>
        <layout>
            <updates>
                <mapmygenomie_compare>
                    <file>mapmygenomie_compare.xml</file>
                </mapmygenomie_compare>
            </updates>
        </layout>
        <routers>
            <mapmygenomie_compare>
                <use>standard</use>
                <args>
                    <module>Mapmygenomie_Compare</module>
                    <frontName>product-matrix</frontName>
                </args>
            </mapmygenomie_compare>
        </routers>        
    </frontend> 
    
    <adminhtml>
        <layout>
            <updates>
                <mapmygenomie_compare>
                    <file>mapmygenomie_compare.xml</file>
                </mapmygenomie_compare>
            </updates>
        </layout>
        <events> 
